<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorGreenRipple</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
        <item name="colorControlHighlight">@color/colorGreenRipple</item>
    </style>

    <style name="bottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_dialog_background</item>
    </style>

    <style name="AuthorizationTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
    </style>

    <style name="ViewImageTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@android:color/black</item>
        <item name="colorPrimaryDark">@color/colorTransparentToolbar</item>
        <item name="colorAccent">@android:color/black</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="toolbarNavigationButtonStyle">@style/Toolbar.Button.Navigation.Tinted</item>
    </style>

    <style name="Toolbar.Button.Navigation.Tinted" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="tint">@android:color/white</item>
    </style>

    <style name="WhiteRippleTheme" parent="AppTheme">
        <item name="colorControlHighlight">@color/colorWhiteRipple</item>
    </style>

    <style name="LightGrayRippleTheme" parent="AppTheme">
        <item name="colorControlHighlight">@color/colorDarkWhiteRipple</item>
    </style>

    <style name="AppTheme.NavigationView">
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

    <style name="Theme.Acron.Popup" parent="Theme.MaterialComponents.Dialog">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowElevation">@dimen/elevation_zero</item>
        <item name="android:windowBackground">@drawable/dialog_background</item>
        <item name="materialButtonStyle">@style/Widget.Acron.Popup.Button</item>
        <item name="textAppearanceHeadline1">@style/TextAppearance.Acron.Popup.Headline1</item>
        <item name="textAppearanceBody1">@style/TextAppearance.Acron.Popup.Body1</item>
        <item name="textAppearanceButton">@style/TextAppearance.Acron.Popup.Button</item>
    </style>

    <style name="Theme.Acron.PopupWithPadding" parent="Theme.MaterialComponents.Dialog">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowElevation">@dimen/elevation_zero</item>
        <item name="android:windowBackground">@drawable/dialog_with_padding_background</item>
        <item name="materialButtonStyle">@style/Widget.Acron.Popup.Button</item>
        <item name="textAppearanceHeadline1">@style/TextAppearance.Acron.Popup.Headline1</item>
        <item name="textAppearanceBody1">@style/TextAppearance.Acron.Popup.Body1</item>
        <item name="textAppearanceButton">@style/TextAppearance.Acron.Popup.Button</item>
    </style>

    <style name="TextAppearance.Acron.Popup.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_xs4</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="TextAppearance.Acron.Popup.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_xs2</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="Widget.Acron.Popup.Button" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">?attr/colorAccent</item>
        <item name="android:paddingLeft">@dimen/spacing_zero</item>
        <item name="android:paddingRight">@dimen/spacing_zero</item>
        <item name="android:paddingTop">@dimen/spacing_s</item>
        <item name="android:paddingBottom">@dimen/spacing_s</item>
        <item name="android:insetTop">@dimen/spacing_zero</item>
        <item name="android:insetBottom">@dimen/spacing_zero</item>
        <item name="android:textAppearance">?attr/textAppearanceButton</item>
    </style>

    <style name="TextAppearance.Acron.Popup.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_xs2</item>
        <item name="android:letterSpacing">0</item>
    </style>
</resources>
