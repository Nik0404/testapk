<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_popup_menu_simple_background"
    android:clickable="true"
    android:focusable="true"
    android:orientation="horizontal"
    android:paddingStart="@dimen/item_popup_menu_padding_horizontal"
    android:paddingTop="@dimen/item_popup_menu_padding_vertical"
    android:paddingEnd="@dimen/item_popup_menu_padding_horizontal"
    android:paddingBottom="@dimen/item_popup_menu_padding_vertical">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_icon"
        android:layout_width="@dimen/item_popup_menu_simple_iv_size"
        android:layout_height="@dimen/item_popup_menu_simple_iv_size"
        android:layout_gravity="center_vertical"
        android:tint="@color/colorDarkGray" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/item_popup_menu_simple_tv_title_margin_start"
        android:textColor="@color/colorDarkGray" />
</LinearLayout>